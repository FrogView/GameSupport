<ga:BaseTransparencyWindow x:Class="CloudTopSupport.View.EquipmentSmartWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudTopSupport.View"
        xmlns:ga="clr-namespace:GA.BaseHelper;assembly=GA.BaseHelper"
        mc:Ignorable="d"
        Title="装备合成表" Height="450" Width="430">
    <Grid>
        <Grid MouseMove="Grid_MouseMove" MouseLeftButtonDown="Grid_MouseLeftButtonDown" x:Name="v_grid">
            <Image Source="pack://siteoforigin:,,,/Image/Equipment.jpg"/>

            <Line X1="{Binding MouseX}" Y1="0" X2="{Binding MouseX}" Y2="{Binding MouseY}"  Stroke="Yellow" StrokeThickness="4" Fill="Yellow"></Line>
            <Line X1="0" Y1="{Binding MouseY}" X2="{Binding MouseX}" Y2="{Binding MouseY}"  Stroke="Yellow" StrokeThickness="4" Fill="Yellow"></Line>
        </Grid>
    </Grid>
</ga:BaseTransparencyWindow>
